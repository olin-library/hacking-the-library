{
  "name": "htl2.web",
  "description": "Hacking the Library web site",
  "version": "1.0.0",
  "author": "Oliver Steele <oliver.steele@olin.edu>",
  "homepage": "https://hackingthelibrary.org",
  "repository": "github:olinlibrary/htl18.org",
  "license": "UNLICENSED",
  "scripts": {
    "build": "gatsby build",
    "data": "python3 scripts/make_events.py > data/days.json",
    "start": "gatsby develop",
    "deploy": "gatsby build && netlify deploy",
    "format": "xo --fix",
    "lint": "xo",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.6.1",
    "gatsby": "^1.9.158",
    "gatsby-image": "^1.0.34",
    "gatsby-link": "^1.6.34",
    "gatsby-plugin-favicon": "^2.1.1",
    "gatsby-plugin-netlify": "^1.0.17",
    "gatsby-plugin-netlify-cms": "^1.0.5",
    "gatsby-plugin-nprogress": "^1.0.11",
    "gatsby-plugin-react-helmet": "^2.0.3",
    "gatsby-plugin-sass": "^1.0.15",
    "gatsby-plugin-sharp": "^1.6.27",
    "gatsby-remark-images": "^1.5.41",
    "gatsby-remark-prismjs": "^1.2.12",
    "gatsby-remark-smartypants": "^1.4.10",
    "gatsby-source-filesystem": "^1.5.14",
    "gatsby-transformer-remark": "^1.7.30",
    "gatsby-transformer-sharp": "^1.6.17",
    "moment": "^2.20.1",
    "react-big-calendar": "^0.17.0",
    "react-helmet": "^5.2.0",
    "tachyons-sass": "^4.9.2"
  },
  "devDependencies": {
    "gatsby-cli": "^1.1.32",
    "prettier": "^1.10.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "space": 2,
    "globals": [
      "graphql"
    ],
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "import/no-extraneous-dependencies": "off",
      "import/order": "off",
      "react/no-danger": "off",
      "react/prop-types": "off",
      "react/require-default-props": "off",
      "react/jsx-tag-spacing": [
        "error",
        {
          "beforeSelfClosing": "always"
        }
      ],
      "no-use-before-define": "off",
      "operator-linebreak": "off",
      "unicorn/filename-case": "off"
    },
    "overrides": [
      {
        "files": "src/pages/calendar.js",
        "rules": {
          "import/extensions": "off"
        }
      },
      {
        "files": "src/components/Header.js",
        "rules": {
          "react/no-array-index-key": "off"
        }
      },
      {
        "files": "src/layouts/index.js",
        "rules": {
          "import/no-unassigned-import": "off"
        }
      }
    ]
  }
}
